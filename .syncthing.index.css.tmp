* {
    margin: 0px;
    padding: 0px;
    font-family: Smythe, sans-serif;
    font-size: 100%;
}
body {
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
    height: 100vh; /*this is important because without it the header and the main will fill the body element but the body element does not fill the whole of the view port. Because the combined size of the header and body elements is not equal to the 100vh there will be space-between*/


}
/* HEADER */
header {
    height: 140px;
    position: relative;
}
.headerImg {
    width: 100%;
    height: 100%;
}
.header-text {
    position: absolute;
    color: #ffffff;
}
.heading {
    top: 22px;
    left: 30px;
    font-size: 25px;
}
.strapline {
    top: 50px;
    left: 30px;
    font-size: 12px;
}
/* ########## */
/* MAIN CONTAINER FOR LIST OF ITEMS */
/* ########## */
.main-container {
    width: 85%;
    height: 100%;
    margin: 45px auto auto auto;
}
.list-of-items{
    height: 60%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    background-color: lightgray;
    gap:  10px;
}
.item{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-bottom: 10px;
    border: 5px solid #dedede;
    border-bottom: 1px solid red;

}
.add-order-btn {
    width: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.i-border {
    border: 1px solid #dedede;
    padding: 15px;
    border-radius: 50%;
 }

.emoji-container{
    width: 25%;
}

.emoji {
    width: 80px;
    height:80px;
}
.description {
    width: 50%;
    padding-left: 3px;
    display: flex;
    flex-direction: column;
}
.description h2 {
    margin-top: 0px;
    font-size: 26px;
    font-weight: normal;
}
.ingredients {
    font-size: 14px;
    color: #8b8b8b;
}
.price {
    font-size: 18px;
    font-weight: normal;
}


/* ########## Your Order##########  */
/* ############################### */
.your-order {
    /* border: 1px solid green; */
    text-align: center;
    font-size: 20px;
    margin-top: 25px;
}
.item-to-pay {
    margin-top: 35px;
    border: 1px solid blue;
}
.btn{
    /* display: flex; */
    width: 100%;
    height: 35px;
    background-color: green;
    font-family: Arial, "Helvetica Neue", Helvetica, sans-serif;
    text-align: center;
    border-radius: 5px;
    font-size: 14px;
    font-weight: bold;
    color: #fff;
}

.item-bought {
    /* border: 1px solid orchid; */
    display: flex;
    justify-content: space-between;
}
.name-of-bought {
    width: 25%;
    font-size: 20px;
}
.bought-price{
    width: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
}
.remove {
    color: #dedede;
    color: #8b8b8b;
    font-family: Arial, Helvetica, sans-serif;
}